@model IEnumerable<AppInventarioWeb.Models.Producto>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" ng-controller="ProductosController">

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card mt-3">
                        <div class="card-header">
                            <button class="btn btn-danger" data-toggle="modal" data-target="#modal-default">
                                <i class="fas fa-plus"></i> Nuevo
                            </button>
                            <button class="btn btn-success" data-toggle="modal" data-target="#modal-default">
                                <i class="fas fa-upload"></i> Carga masiva
                            </button>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Proveedor</th>
                                        <th>Producto</th>
                                        <th>Costo</th>
                                        <th>Precio</th>
                                        <th>Contenido</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @String.Format("{0:c}", item.Costo)
                                        </td>
                                        <td>
                                            @String.Format("{0:c}", item.Precio)
                                        </td>
                                        <td>
                                            @($"{item.Contenido} {item.Unidad}")
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" ng-click="editarItem(1, 2);">
                                                <i class="fas fa-pen"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Proveedor</th>
                                        <th>Producto</th>
                                        <th>Costo</th>
                                        <th>Precio</th>
                                        <th>Contenido</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

        

    <form class="needs-validation" novalidate action="Productos/Create" method="post">
        @Html.AntiForgeryToken()
        <div class="modal fade" id="modal-default">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Nuevo elemento</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="Nombre">Nombre</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" required maxlength="64">
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un nombre valido.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Costo">Costo</label>
                                <input type="number" class="form-control" id="Costo" name="Costo" required min="1" max="9999" step="0.1">
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un costo valido.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Precio">Precio</label>
                                <input type="number" class="form-control" id="Precio" name="Precio" required min="1" max="9999" step="0.1">
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un precio valido.
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="ProveedorId">Proveedor</label>
                                <select class="form-control" style="width: 100%;" id="ProveedorId" name="ProveedorId" required>
                                    <option value="">Seleccione...</option>
                                    <option ng-repeat="proveedor in proveedores" value="{{proveedor.ProveedorId}}">
                                        {{proveedor.Nombre}}
                                    </option>
                                </select>
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un proveedor valido.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Contenido">Contenido</label>
                                <input type="number" class="form-control" id="Contenido" name="Contenido" required min="1" max="9999" step="0.1">
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un contenido valida.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Unidad">Unidad</label>
                                <select class="form-control" style="width: 100%;" id="Unidad" name="Unidad" required>
                                    <option value="">Seleccione...</option>
                                    <option value="Lt.">lt.</option>
                                    <option value="Ml.">ml.</option>
                                    <option value="Gr.">gr.</option>
                                    <option value="Kg.">kg.</option>
                                    <option value="Pza.">pza.</option>
                                    <option value="Pzas.">pzas.</option>
                                </select>
                                <div class="valid-feedback">
                                    Buen trabajo!
                                </div>
                                <div class="invalid-feedback">
                                    Porfavor ingresa un unidad valida.
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="AlmacenId">Almacen</label>
                                <select class="form-control" style="width: 100%;" id="AlmacenId" name="AlmacenId" required>
                                    <option value="1">Almacen 1</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please provide a valid city.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="SlotId">Slot</label>
                                <select class="form-control" style="width: 100%;" id="SlotId" name="SlotId" required>
                                    <option>Almacen 1 / Slot 1</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please provide a valid city.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </form>
    <!-- /.modal -->


</div>
<!-- /.content-wrapper -->

<script src="~/Scripts/Controllers/ProductosController.js"></script>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

    $('#example1 tbody').on('click', 'tr', function () {
        var data = $('#example1')
            .DataTable()
            .row(this).data();

        debugger;

        $("#Nombre").val(data[1]);

        //$('#ProveedorId option[value="Coca Cola"]')

        $('#ProveedorId').find(`option[text="${data[0]}"]`);

        //$(`#ProveedorId option:contains(${data[0]})`)

        //$(`#ProveedorId option:eq('${data[0]}')`)
        //$("#ProveedorId").val(data[0]);
        $("#Costo").val(data[2].replace('$', ''));
        $("#Precio").val(data[3].replace('$', ''));
        $("#Contenido").val(data[4].split(' ')[0]);
        $("#Unidad").val(data[4].split(' ')[1]);
        $('#modal-default').modal('show');
    });
</script>
